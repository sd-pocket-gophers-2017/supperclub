doctype html
html
  head
    title TextEvent
    = csrf_meta_tags
    <!-- Compiled and minified CSS -->
    link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css"
    link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"
    <!-- Compiled and minified JavaScript -->
    script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"
    script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application', media: 'all'

  body
    .container
      .row
        header
          nav
            .nav-wrapper.blue
              = link_to 'TextEvent', root_path, class: 'center flow-text brand-logo'
              a href='#' data-activates='mobile-demo' class='button-collapse'
                i.material-icons menu
              ul.hide-on-med-and-down
                - if admin_signed_in?
                  li = link_to 'New Event', new_event_path
                  li = link_to 'Events', events_path
                  li = link_to 'Logout', destroy_admin_session_path, method: :delete
                - else
                  li = link_to 'Register', new_admin_registration_path
                  li = link_to 'Login', new_admin_session_path
              ul.side-nav#mobile-demo
                - if admin_signed_in?
                  li = link_to 'New Event', new_event_path
                  li = link_to 'Events', events_path
                  li = link_to 'Logout', destroy_admin_session_path, method: :delete
                - else
                  li = link_to 'Register', new_admin_registration_path
                  li = link_to 'Login', new_admin_session_path

      main
        == yield
